{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
